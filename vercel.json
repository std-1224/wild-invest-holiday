{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/stripe/list-payment-methods",
      "destination": "/api/stripe-list-payment-methods"
    },
    {
      "source": "/api/stripe/save-payment-method",
      "destination": "/api/stripe-save-payment-method"
    },
    {
      "source": "/api/stripe/create-payment-intent",
      "destination": "/api/stripe-create-payment-intent"
    },
    {
      "source": "/api/stripe/set-default-payment-method",
      "destination": "/api/stripe-set-default-payment-method"
    },
    {
      "source": "/api/stripe/remove-payment-method",
      "destination": "/api/stripe-remove-payment-method"
    },
    {
      "source": "/api/stripe/create-subscription",
      "destination": "/api/stripe-create-subscription"
    },
    {
      "source": "/api/stripe/webhook",
      "destination": "/api/stripe-webhook"
    },
    {
      "source": "/api/rms/availability",
      "destination": "/api/rms-availability"
    },
    {
      "source": "/api/rms/create-booking",
      "destination": "/api/rms-create-booking"
    },
    {
      "source": "/api/rms/cancel-booking",
      "destination": "/api/rms-cancel-booking"
    },
    {
      "source": "/api/rms/webhook",
      "destination": "/api/rms-webhook"
    }
  ],
  "env": {
    "VITE_STRIPE_PUBLISHABLE_KEY": "@vite_stripe_publishable_key",
    "VITE_STRIPE_SECRET_KEY": "@vite_stripe_secret_key",
    "VITE_AWS_REGION": "@vite_aws_region",
    "VITE_AWS_USER_POOL_ID": "@vite_aws_user_pool_id",
    "VITE_AWS_USER_POOL_CLIENT_ID": "@vite_aws_user_pool_client_id",
    "VITE_RMS_API_URL": "@vite_rms_api_url",
    "VITE_RMS_API_KEY": "@vite_rms_api_key",
    "VITE_RMS_TENANT_ID": "@vite_rms_tenant_id"
  }
}

